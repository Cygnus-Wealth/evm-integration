{
  "name": "@cygnus-wealth/evm-integration",
  "version": "1.0.0",
  "description": "Framework-agnostic TypeScript library for read-only EVM blockchain data access",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:e2e": "vitest run src/e2e/balanceVerification.test.tsx",
    "verify:balance": "tsx src/e2e/verifyBalance.ts",
    "verify:websocket": "tsx src/e2e/websocketVerification.ts",
    "dev:ui": "cd test-ui && npm install && npm run dev",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "evm",
    "web3",
    "cygnus-wealth"
  ],
  "author": "Jacob Boswell",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.0.15",
    "@vitest/ui": "^3.2.4",
    "tsx": "^4.7.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@cygnus-wealth/data-models": "file:../data-models",
    "viem": "^2.32.1"
  }
}
